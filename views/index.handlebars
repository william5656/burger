<div class="container">

<h1>Burgers</h1>

<div class="row">
  <div class="col">
      <h2>Tasty Burgers</h2>

    
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block devour=true}}
          {{/unless}}
        {{/each}}
      
  </div>
  <div class="col">
      <h2>Devoured Burgers</h2>

      
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burger-block devour=false}}
          {{/if}}
        {{/each}}
      
  </div>

</div>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">devour?</label><br>
    <input type="radio" name="devoured" value="1" checked> Eaten <br>
    <input type="radio" name="devoured" value="0" > Not Eaten
  </div>

  <button type="submit">Add Burger</button>
</form>

</div>